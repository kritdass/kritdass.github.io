---
import { Icon } from "astro-icon/components";

interface Props {
    id: string;
    title: string;
    date: Date;
    description: string;
}

const { title, date, description, id } = Astro.props;
---

<a
    href={`/blog/${id}`}
    class="gap-4 rounded-md border border-gray-200 dark:border-gray-700 p-4 hover:bg-gray-100 dark:hover:bg-gray-800"
>
    <div class="flex items-baseline justify-between gap-4">
        <h1 class="text-sm font-bold text-gray-900 dark:text-gray-100 truncate">
            {title}
        </h1>
        <div
            class="flex items-center gap-1 text-xs text-gray-500 dark:text-gray-400"
        >
            <Icon name="tabler:calendar" />
            <span>{date.toISOString().split("T")[0]}</span>
        </div>
    </div>

    <p class="mt-2 text-xs text-gray-600 dark:text-gray-400 line-clamp-1">
        {description}
    </p>
</a>
